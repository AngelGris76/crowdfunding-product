mixin article-section(option)
  if(option.left =="0")
    - var extraClass = "model--disabled"
  else
    - extraClass =""
  section.model(class=`${extraClass}` id=`model-${option.id}`)
    .model__header
      h3.model__title= option.title
      p.model__price= `Pledge $${option.price} or more`
    p.model__description= option.description
    .model__footer
      p.model__left= option.left
        span.model__left-text left
      if(option.left == "0")
        button.model__get.button--primary.button--disabled(type="button" disabled) Out of stock
      else
        button.model__get.button--primary(type="button") Select Reward